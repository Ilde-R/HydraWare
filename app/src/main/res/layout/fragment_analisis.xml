<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView para contenido principal -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Análisis del Tanque"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="4dp" />

            <!-- Fecha y Hora -->
            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: -- / Hora: --"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Estado General -->
            <TextView
                android:id="@+id/tvEstadoGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Cargando..."
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:layout_marginBottom="16dp" />

            <!-- Card pH -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTituloPH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel de pH"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/tvValorPH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay datos"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvRangoPH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay datos"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvRecomendacionPH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Temperatura -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTemperatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTituloTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperatura"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/tvValorTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay datos"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvRangoTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay datos"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvRecomendacionTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="14sp"
                        android:textColor="#FFA500"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Historial -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHistorial"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerHistorial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>