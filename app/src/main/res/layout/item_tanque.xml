<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="#000000"
            android:alpha="0.6"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <!-- Contenido a la derecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre -->
            <TextView
                android:id="@+id/textEstanqueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estanque 1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="14dp" />

            <!-- Datos pH y temperatura -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- pH -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel Ph"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/textPhValue"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:text="Cargando Información"
                        android:textColor="#888888" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textPhStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textColor="#00C896" />
                </LinearLayout>

                <!-- Separador -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:layout_marginHorizontal="8dp" />

                <!-- Temperatura -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperatura"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/textTempValue"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:text="Cargando Información"
                        android:textColor="#888888" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textTempStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textColor="#00C896" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fecha y hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última Actualización"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/textDateTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando Información..."
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Botones Editar y Eliminar alineados a la derecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:textSize="12sp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:paddingVertical="6dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
