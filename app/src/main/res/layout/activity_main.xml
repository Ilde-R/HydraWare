<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Bienvenido Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textWelcomeMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Bienvenido"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_gradient"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta Estanque 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Imagen -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:scaleType="centerCrop"
                        android:background="#000000"
                        android:alpha="0.6"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp" />

                    <!-- Datos: pH, Temperatura, Fecha y Hora -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Nombre Estanque -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estanque 1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="12dp" />

                        <!-- Contenedor horizontal para Nivel pH y Temperatura -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Columna pH -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nivel pH"
                                    android:textStyle="bold"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:id="@+id/textPhValue"
                                    android:layout_width="120dp"
                                    android:layout_height="35dp"
                                    android:paddingBottom="0dp"
                                    android:text="Cargando Información"
                                    android:textColor="#888888" />

                                <!-- Divisor horizontal -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#DDDDDD"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/textPhStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cargando..."
                                    android:textColor="#00C896" />
                            </LinearLayout>

                            <!-- Divisor vertical entre columnas -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#DDDDDD"
                                android:layout_marginHorizontal="8dp" />

                            <!-- Columna Temperatura -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Temperatura"
                                    android:textStyle="bold"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:id="@+id/textTempValue"
                                    android:layout_width="120dp"
                                    android:layout_height="35dp"
                                    android:text="Cargando Información"
                                    android:textColor="#888888"
                                    android:paddingBottom="0dp" />

                                <!-- Divisor horizontal -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#DDDDDD"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/textTempStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cargando..."
                                    android:textColor="#00C896" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Fecha y Hora -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Última Actualización"
                                android:textStyle="bold"
                                android:paddingBottom="4dp" />

                            <TextView
                                android:id="@+id/textDateTimeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cargando Información..."
                                android:textColor="#888888" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu" />

    <!-- FloatingActionButton centrado sobre BottomNavigationView -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_center"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ic_launcher_foreground"
        app:backgroundTint="@color/material_dynamic_primary0" />
</RelativeLayout>
