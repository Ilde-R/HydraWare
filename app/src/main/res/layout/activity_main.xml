<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Contenedor para los Fragments -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="68dp" >

    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        style="@style/Widget.Hydraware.BottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:background="@color/surface"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_center"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="Agregar tanque"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:layout_anchor="@+id/fragment_container"
        app:layout_anchorGravity="bottom|center"
        app:tint="@color/color_on_primary" />

    <!-- FAB centrado encima de la BottomNavigationView -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
