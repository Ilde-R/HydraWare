<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Análisis del Tanque"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fecha y Hora -->
    <TextView
        android:id="@+id/tvFechaHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha: -- / Hora: --"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Estado General -->
    <TextView
        android:id="@+id/tvEstadoGeneral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado: Normal"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/tvFechaHora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />


    <!-- Card pH -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoGeneral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de pH"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tvValorPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.8"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvRangoPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango ideal: 6.5 - 7.5"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvRecomendacionPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El nivel de pH es adecuado."
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Temperatura -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTemperatura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardPH"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tvValorTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29.5 °C"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvRangoTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango ideal: 24 - 28 °C"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvRecomendacionTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura ligeramente alta, monitorear."
                android:textSize="14sp"
                android:textColor="#FFA500"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Historial con RecyclerView adaptado a la pantalla -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHistorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardTemperatura"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHistorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
